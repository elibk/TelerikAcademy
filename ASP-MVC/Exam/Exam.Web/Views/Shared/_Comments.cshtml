@model IEnumerable<Exam.Web.Models.CommentModel>



<div id="Comments">

   
    
    @if (Model.Count() > 0)
    {
        <ul>

            @foreach (var comment in Model)
            {
                <li>
                    @comment.AuthorName:  @comment.Content
                </li>
            }

        </ul>
    }

</div>
@if (ViewBag.ShowError as bool? == true)
{
    <div id="error-message" class="alert alert-error hidden">
        <p>
            Comment is requerd
        </p>
    </div>
}

