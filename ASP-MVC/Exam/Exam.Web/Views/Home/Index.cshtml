@{
    ViewBag.Title = "Home Page";  
}

@model IEnumerable<Exam.Web.Models.TicketModelSimple>

@{
    ViewBag.Title = "All tickets";
}


<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="span4">
            <h2>@ticket.Title</h2>
            <p><srtong>Category: </srtong> @ticket.CategoryName</p>
            <p><srtong>Author: </srtong> @ticket.AuthorName</p>
            <p>@ticket.CommentsCount comment(s)</p>
            <p><a class="btn" href="@Url.Action("TicketDetails", "Home", new { ticket.TicketId })">More Details...</a></p>
        </div>

        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
        @:<div class="row-fluid">
        }
    }
</div>